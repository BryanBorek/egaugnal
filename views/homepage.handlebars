<div class="d-flex h-100 justify-content-center align-items-center h-100 mt-5 login-glass">
    <div class="d-flex container justify-content-center align-items-center login-card">
        <form class="form login-form mt-3">
            <h2 class="slogan mx-2">If you say it enough, it stops sounding like a foreign language.</h2>
            <div class="d-flex form-group justify-content-center">
                <label for="name-login"></label>
                <input class="form-input w-100 mx-2" type="name" id="name-login" placeholder="name" />
            </div>
            <div class="d-flex form-group justify-content-center">
                <label for="email-login"></label>
                <input class="form-input w-100 mx-2" type="text" id="email-login" placeholder="email" />
            </div>
            <div class="d-flex form-group justify-content-center">
                <label for="password-login"></label>
                <input class="form-input w-100 mx-2" type="password" id="password-login" placeholder="password" />
            </div>
            <div class="d-flex form-group justify-content-center mx-2">
                <button id="loginBtn" class="btn btn-light btn-l col-6" role="button">Login</button>
                <button id="signupBtn" class="btn btn-light btn-r col-6" role="button">Signup</button>
            </div>
        </form>
    </div>
</div>


<script src="/js/login.js"></script>
